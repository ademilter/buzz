{
  "scripts": {
    "dev:css": "npx tailwindcss -i ./assets/main.css -o static/style.css -w",
    "dev:hugo": "hugo server -D --ignoreCache",
    "dev": "run-p dev:*",
    "build:css": "NODE_ENV=production npx tailwindcss -i ./assets/main.css -o static/style.css -m",
    "build:hugo": "hugo --gc",
    "build": "run-s build:*"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.1.8"
  }
}
